{
  "name": "zivora-optimized",
  "version": "1.0.0",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  },
  "scripts": {
    "_comment": "Optimized scripts for instant startup",
    
    "dev": "NODE_ENV=development tsx server/index.ts",
    "dev:fast": "node --import ./fast-loader.js instant-dev.js",
    "dev:turbo": "USE_PROD_BUILD=true node instant-dev.js",
    
    "build": "npm run build:client && npm run build:server",
    "build:client": "vite build -c client/vite.config.optimized.ts",
    "build:server": "esbuild server/index.ts --platform=node --packages=external --bundle --format=esm --outdir=dist --minify --tree-shaking=true",
    "build:fast": "vite build --mode production && esbuild server/index.ts --platform=node --bundle --format=esm --outdir=dist --minify",
    
    "start": "NODE_ENV=production node dist/index.js",
    "start:fast": "NODE_ENV=production node --max-old-space-size=256 --experimental-json-modules dist/index.js",
    "start:warm": "concurrently \"npm run start:fast\" \"npm run warm\"",
    
    "warm": "node warm-server.js",
    "health": "curl -f http://localhost:5000/api/health || exit 1",
    
    "db:push": "drizzle-kit push",
    "check": "tsc --noEmit"
  },
  
  "_performance_notes": {
    "startup_target": "< 2 seconds",
    "bundle_size_target": "< 1MB",
    "dependency_count": "Minimize to essentials only",
    "memory_usage": "< 512MB peak"
  },
  
  "dependencies": {
    "_comment": "Core dependencies only - remove unused packages",
    
    "express": "^4.21.2",
    "react": "^18.3.1", 
    "react-dom": "^18.3.1",
    "wouter": "^3.3.5",
    "@tanstack/react-query": "^5.60.5",
    
    "drizzle-orm": "^0.39.1",
    "@neondatabase/serverless": "^0.10.4",
    "drizzle-zod": "^0.7.0",
    "zod": "^3.24.2",
    
    "tailwindcss": "^3.4.17",
    "clsx": "^2.1.1",
    "tailwind-merge": "^2.6.0",
    
    "lucide-react": "^0.453.0",
    "date-fns": "^3.6.0",
    
    "_removed_heavy_deps": {
      "puppeteer": "REMOVED - 24MB+ overhead",
      "firebase": "REMOVED - Use direct API calls",
      "capacitor": "KEEP - Only for mobile builds",
      "radix_ui_components": "REDUCE - Only use essential ones"
    }
  },
  
  "devDependencies": {
    "tsx": "^4.19.1",
    "typescript": "5.6.3", 
    "vite": "^5.4.14",
    "@vitejs/plugin-react": "^4.3.2",
    "esbuild": "^0.25.0",
    "drizzle-kit": "^0.30.4",
    "@types/node": "20.16.11",
    "@types/express": "4.17.21",
    "concurrently": "^8.2.2"
  },
  
  "optionalDependencies": {},
  
  "_replit_config": {
    "always_on": "Reserved VM recommended for production",
    "autoscale": "Good for development with recent cold-start improvements",
    "memory_limit": "512MB sufficient with optimizations"
  }
}